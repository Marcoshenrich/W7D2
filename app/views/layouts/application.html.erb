<button>Sign Out!</button>
</form>
<%end%>

<% unless logged_in? %>
<a href="<%= new_session_url %>" ><button>Sign In</button></a>
<%end%>

<div id="banner"></div>
  <div id="body">
    <body>
      <%= yield %>
    </body>
  </div>


    <div id="block"></div>
</html>
